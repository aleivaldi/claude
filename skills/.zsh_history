#/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"\
\
# Directory da processare (usa la directory corrente se non specificata)\
SOURCE_DIR="${1:-.}"\
\
# Verifica che la directory esista\
if [ ! -d "$SOURCE_DIR" ]; then\
    echo "Errore: La directory '$SOURCE_DIR' non esiste"\
    exit 1\
fi\
\
# Conta le cartelle processate\
count=0\
\
# Itera su tutte le cartelle nella directory\
for dir in "$SOURCE_DIR"/*/ ; do\
    # Rimuovi il trailing slash\
    dir="${dir%/}"\
    \
    # Ottieni solo il nome della cartella\
    dirname=$(basename "$dir")\
    \
    # Crea lo zip con lo stesso nome della cartella\
    echo "Zippando: $dirname..."\
    zip -r "${dir}.zip" "$dir"\
    \
    ((count++))\
done\
\
echo "Completato! $count cartelle zippate."
